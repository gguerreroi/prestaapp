<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="container-xxl" id="kt_content_container">

        <div class="row g-5 g-xl-8">
            <!-- Form -->
            <div class="col-12 col-xl-7">
                <div class="card gc-elevated">
                    <div class="card-header">
                        <div class="card-title">
                            <h3 class="fw-bold m-0">Datos del préstamo</h3>
                        </div>
                    </div>

                    <div class="card-body">
                        <form id="loanForm" novalidate>

                            <!-- CUI -->
                            <div class="mb-6">
                                <label class="form-label fw-semibold" for="cui">CUI (13 dígitos)</label>
                                <input
                                        id="cui"
                                        name="cui"
                                        class="form-control form-control-lg"
                                        inputmode="numeric"
                                        autocomplete="off"
                                        maxlength="13"
                                        placeholder="Ej: 1234567890123"
                                        required
                                />
                                <div class="form-text">Solo números, 13 dígitos exactos.</div>
                                <div class="text-danger fs-7 mt-1" id="cuiError" aria-live="polite"></div>
                            </div>

                            <!-- Nombre -->
                            <div class="mb-6">
                                <label class="form-label fw-semibold" for="nombre">Nombre completo</label>
                                <input
                                        id="nombre"
                                        name="nombre"
                                        class="form-control form-control-lg"
                                        autocomplete="name"
                                        placeholder="Ej: Juan Pérez"
                                        required
                                />
                                <div class="text-danger fs-7 mt-1" id="nombreError" aria-live="polite"></div>
                            </div>

                            <!-- Cantidad -->
                            <div class="mb-6">
                                <div class="d-flex align-items-center justify-content-between mb-2">
                                    <label class="form-label fw-semibold mb-0" for="cantidad">Cantidad</label>
                                    <span class="badge badge-light-primary fs-7" id="amountPill">Q 500</span>
                                </div>

                                <input
                                        id="cantidad"
                                        name="cantidad"
                                        class="form-range"
                                        type="range"
                                        min="500"
                                        max="50000"
                                        step="500"
                                        value="500"
                                />

                                <div class="d-flex justify-content-between mt-2 text-muted fs-7">
                                    <span>Q 500</span>
                                    <span>Q 50,000</span>
                                </div>
                            </div>

                            <!-- Actions -->
                            <div class="d-flex flex-column flex-sm-row gap-3 justify-content-end">
                                <button type="button" class="btn btn-light" id="btnReset">
                                    Limpiar
                                </button>

                                <button type="submit" class="btn btn-primary" id="btnSubmit" disabled>
                                    Guardar préstamo
                                </button>
                            </div>

                            <div class="mt-6 text-muted fs-7">
                                Plazo fijo: <span class="fw-semibold text-gray-800">35 días</span>. La cuota diaria se redondea hacia arriba a quetzales enteros.
                            </div>

                        </form>
                    </div>
                </div>
            </div>

            <!-- Summary -->
            <div class="col-12 col-xl-5">
                <div class="card gc-elevated mb-5">
                    <div class="card-header">
                        <div class="card-title">
                            <h3 class="fw-bold m-0">Cálculo</h3>
                        </div>
                    </div>

                    <div class="card-body">
                        <div class="d-flex flex-column gap-4">
                            <div class="p-4 rounded border">
                                <div class="text-muted fs-7">Cuota diaria</div>
                                <div class="fs-2 fw-bolder" id="cuotaDiaria">Q 0</div>
                            </div>

                            <div class="p-4 rounded border">
                                <div class="text-muted fs-7">Total a pagar (35 días)</div>
                                <div class="fs-2 fw-bolder" id="totalPagar">Q 0</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card gc-elevated">
                    <div class="card-header">
                        <div class="card-title">
                            <h3 class="fw-bold m-0">Resumen</h3>
                        </div>
                    </div>

                    <div class="card-body">
                        <div class="d-flex flex-column gap-4" aria-live="polite">
                            <div class="d-flex justify-content-between">
                                <span class="text-muted">CUI</span>
                                <span class="fw-semibold text-gray-800" id="sumCui">—</span>
                            </div>

                            <div class="d-flex justify-content-between">
                                <span class="text-muted">Cliente</span>
                                <span class="fw-semibold text-gray-800 text-end" id="sumNombre">—</span>
                            </div>

                            <div class="d-flex justify-content-between">
                                <span class="text-muted">Principal</span>
                                <span class="fw-semibold text-gray-800" id="sumPrincipal">Q 500</span>
                            </div>

                            <div class="d-flex justify-content-between">
                                <span class="text-muted">Cuota diaria</span>
                                <span class="fw-semibold text-gray-800" id="sumCuota">Q 0</span>
                            </div>

                            <div class="d-flex justify-content-between">
                                <span class="text-muted">Total a pagar</span>
                                <span class="fw-semibold text-gray-800" id="sumTotal">Q 0</span>
                            </div>
                        </div>

                        <div class="separator my-6"></div>

                        <div class="d-flex align-items-center justify-content-between">
                            <span class="text-muted">Estado</span>
                            <span class="badge gc-late" id="statusBadge">Pendiente</span>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>