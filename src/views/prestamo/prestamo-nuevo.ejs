<!--begin::Toolbar-->
<div class="toolbar py-3 py-lg-6" id="kt_toolbar">
    <div class="container-xxl d-flex flex-stack flex-wrap gap-2">
        <div class="page-title d-flex flex-column justify-content-center me-3">
            <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">
                Nuevo préstamo
            </h1>
            <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                <li class="breadcrumb-item text-muted">
                    <a href="/" class="text-muted text-hover-primary">Inicio</a>
                </li>
                <li class="breadcrumb-item">
                    <span class="bullet bg-gray-400 w-5px h-2px"></span>
                </li>
                <li class="breadcrumb-item text-muted">Préstamos</li>
                <li class="breadcrumb-item">
                    <span class="bullet bg-gray-400 w-5px h-2px"></span>
                </li>
                <li class="breadcrumb-item text-dark">Nuevo</li>
            </ul>
        </div>

        <div class="d-flex align-items-center gap-2 gap-lg-3">
            <a href="/loans" class="btn btn-light">
                Volver
            </a>

            <span class="badge gc-paid" id="pillStatus" style="display:none;">
        ✔ Listo
      </span>
        </div>
    </div>
</div>
<!--end::Toolbar-->

<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="container-xxl" id="kt_content_container">

        <div class="row g-5 g-xl-8">
            <!-- Form -->
            <div class="col-12 col-xl-7">
                <div class="card gc-elevated">
                    <div class="card-header">
                        <div class="card-title">
                            <h3 class="fw-bold m-0">Datos del préstamo</h3>
                        </div>
                    </div>

                    <div class="card-body">
                        <form id="loanForm" novalidate enctype="multipart/form-data">
                            <!-- Fecha inicio -->
                            <%   const today = new Date().toLocaleDateString('en-CA', { timeZone: 'America/Guatemala' }); // YYYY-MM-DD %>
                            <div class="mb-6">
                                <label class="form-label fw-semibold" for="fechaInicio">Fecha de inicio</label>
                                <input
                                        id="fechaInicio"
                                        name="fecha_inicio"
                                        type="date"
                                        class="form-control form-control-lg"
                                        value="<%= today || '' %>"
                                        required
                                />
                                <div class="text-danger fs-7 mt-1" id="fechaInicioError" aria-live="polite"></div>
                            </div>
                            <!-- CUI -->
                            <div class="mb-6">
                                <label class="form-label fw-semibold" for="cui">CUI (13 dígitos)</label>
                                <div class="input-group input-group-lg">
                                    <input
                                            id="cui"
                                            name="cui"
                                            class="form-control"
                                            inputmode="numeric"
                                            autocomplete="off"
                                            maxlength="13"
                                            placeholder="Ej: 1234567890123"
                                            required
                                    />
                                    <button type="button" class="btn btn-light" id="btnBuscarCui">
                                        Buscar
                                    </button>
                                </div>

                                <div class="form-text">Se valida dígito verificador.</div>
                                <div class="text-danger fs-7 mt-1" id="cuiError" aria-live="polite"></div>

                                <div class="mt-3" id="cuiStatusWrap" style="display:none;">
                                    <span class="badge" id="cuiStatusBadge">—</span>
                                    <span class="text-muted fs-7 ms-2" id="cuiStatusText"></span>
                                </div>
                            </div>

                            <!-- Sección: Cliente existente (solo lectura) -->
                            <div class="mb-6" id="clienteExistenteCard" style="display:none;">
                                <div class="notice d-flex bg-light-primary rounded border-primary border border-dashed p-4">
      <span class="svg-icon svg-icon-2tx me-3">
        <!-- ícono opcional -->
      </span>
                                    <div class="d-flex flex-stack flex-grow-1">
                                        <div class="fw-semibold">
                                            <div class="fs-6 text-gray-800 fw-bold" id="clienteExistenteNombre">—</div>
                                            <div class="text-muted fs-7" id="clienteExistenteDetalle">—</div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Sección: Nuevo cliente (solo si NO existe el CUI) -->
                            <div class="mb-6" id="nuevoClienteWrap" style="display:none;">
                                <div class="separator my-6"></div>
                                <h4 class="fw-bold mb-4">Crear cliente</h4>

                                <div class="row g-5">
                                    <div class="col-12 col-md-6">
                                        <label class="form-label fw-semibold" for="nombres">Nombres</label>
                                        <input id="nombres" name="nombres" class="form-control form-control-lg" autocomplete="given-name" />
                                        <div class="text-danger fs-7 mt-1" id="nombresError" aria-live="polite"></div>
                                    </div>

                                    <div class="col-12 col-md-6">
                                        <label class="form-label fw-semibold" for="apellidos">Apellidos</label>
                                        <input id="apellidos" name="apellidos" class="form-control form-control-lg" autocomplete="family-name" />
                                        <div class="text-danger fs-7 mt-1" id="apellidosError" aria-live="polite"></div>
                                    </div>

                                    <div class="col-12">
                                        <label class="form-label fw-semibold" for="direccion">Dirección</label>
                                        <input id="direccion" name="direccion" class="form-control form-control-lg" autocomplete="street-address" />
                                        <div class="text-danger fs-7 mt-1" id="direccionError" aria-live="polite"></div>
                                    </div>

                                    <div class="col-12 col-md-6">
                                        <label class="form-label fw-semibold" for="telefono">Teléfono</label>
                                        <input id="telefono" name="telefono" class="form-control form-control-lg" inputmode="tel" autocomplete="tel" />
                                        <div class="text-danger fs-7 mt-1" id="telefonoError" aria-live="polite"></div>
                                    </div>

                                    <div class="col-12 col-md-6">
                                        <label class="form-label fw-semibold" for="cartera">Cartera (Agente de cobranza)</label>
                                        <select id="cartera" name="cartera" class="form-select form-select-lg">
                                            <option value="">Seleccione…</option>
                                        </select>
                                        <div class="text-danger fs-7 mt-1" id="carteraError" aria-live="polite"></div>
                                    </div>

                                    <div class="col-12">
                                        <label class="form-label fw-semibold" for="observaciones">Observaciones</label>
                                        <textarea id="observaciones" name="observaciones" class="form-control form-control-lg" rows="3"></textarea>
                                    </div>

                                    <div class="col-12">
                                        <label class="form-label fw-semibold" for="referencias_vivienda">Referencias de vivienda</label>
                                        <textarea id="referencias_vivienda" name="referencias_vivienda" class="form-control form-control-lg" rows="3"></textarea>
                                    </div>

                                    <!-- Archivos / Fotos -->
                                    <div class="col-12">
                                        <div class="separator my-6"></div>
                                        <h5 class="fw-bold mb-4">Fotografías</h5>

                                        <div class="row g-5">
                                            <div class="col-12 col-md-6">
                                                <label class="form-label fw-semibold" for="cuiFrontal">CUI Frontal</label>
                                                <input id="cuiFrontal" name="cuiFrontal" type="file" class="form-control form-control-lg" accept="image/*" />
                                            </div>

                                            <div class="col-12 col-md-6">
                                                <label class="form-label fw-semibold" for="cuiDorsal">CUI Dorsal</label>
                                                <input id="cuiDorsal" name="cuiDorsal" type="file" class="form-control form-control-lg" accept="image/*" />
                                            </div>

                                            <div class="col-12 col-md-6">
                                                <label class="form-label fw-semibold" for="fotoVivienda">Foto de vivienda</label>
                                                <input id="fotoVivienda" name="fotoVivienda" type="file" class="form-control form-control-lg" accept="image/*" />
                                            </div>

                                            <div class="col-12 col-md-6">
                                                <label class="form-label fw-semibold" for="fotoPersona">Foto de la persona</label>
                                                <input id="fotoPersona" name="fotoPersona" type="file" class="form-control form-control-lg" accept="image/*" />
                                            </div>

                                            <div class="col-12">
                                                <div class="form-text">
                                                    Recomendación: máximo 2–5 MB por imagen.
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Monto préstamo -->
                            <div class="separator my-6"></div>

                            <div class="mb-6">
                                <div class="d-flex align-items-center justify-content-between mb-2">
                                    <label class="form-label fw-semibold mb-0" for="cantidad">Monto préstamo</label>
                                    <span class="badge badge-light-primary fs-7" id="amountPill">Q 500</span>
                                </div>

                                <input
                                        id="cantidad"
                                        name="cantidad"
                                        class="form-range"
                                        type="range"
                                        min="500"
                                        max="50000"
                                        step="500"
                                        value="500"
                                />

                                <div class="d-flex justify-content-between mt-2 text-muted fs-7">
                                    <span>Q 500</span>
                                    <span>Q 50,000</span>
                                </div>
                            </div>

                            <!-- Actions -->
                            <div class="d-flex flex-column flex-sm-row gap-3 justify-content-end">
                                <button type="button" class="btn btn-light" id="btnReset">Limpiar</button>
                                <button type="submit" class="btn btn-primary" id="btnSubmit" disabled>Guardar préstamo</button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>

            <!-- Summary -->
            <div class="col-12 col-xl-5">
                <div class="card gc-elevated mb-5">
                    <div class="card-header">
                        <div class="card-title">
                            <h3 class="fw-bold m-0">Cálculo</h3>
                        </div>
                    </div>

                    <div class="card-body">
                        <div class="d-flex flex-column gap-4">
                            <div class="p-4 rounded border">
                                <div class="text-muted fs-7">Cuota diaria</div>
                                <div class="fs-2 fw-bolder" id="cuotaDiaria">Q 0</div>
                            </div>

                            <div class="p-4 rounded border">
                                <div class="text-muted fs-7">Total a pagar (35 días)</div>
                                <div class="fs-2 fw-bolder" id="totalPagar">Q 0</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card gc-elevated">
                    <div class="card-header">
                        <div class="card-title">
                            <h3 class="fw-bold m-0">Resumen</h3>
                        </div>
                    </div>

                    <div class="card-body">
                        <div class="d-flex flex-column gap-4" aria-live="polite">
                            <div class="d-flex justify-content-between">
                                <span class="text-muted">CUI</span>
                                <span class="fw-semibold text-gray-800" id="sumCui">—</span>
                            </div>

                            <div class="d-flex justify-content-between">
                                <span class="text-muted">Cliente</span>
                                <span class="fw-semibold text-gray-800 text-end" id="sumNombre">—</span>
                            </div>

                            <div class="d-flex justify-content-between">
                                <span class="text-muted">Principal</span>
                                <span class="fw-semibold text-gray-800" id="sumPrincipal">Q 500</span>
                            </div>

                            <div class="d-flex justify-content-between">
                                <span class="text-muted">Cuota diaria</span>
                                <span class="fw-semibold text-gray-800" id="sumCuota">Q 0</span>
                            </div>

                            <div class="d-flex justify-content-between">
                                <span class="text-muted">Total a pagar</span>
                                <span class="fw-semibold text-gray-800" id="sumTotal">Q 0</span>
                            </div>
                        </div>

                        <div class="separator my-6"></div>

                        <div class="d-flex align-items-center justify-content-between">
                            <span class="text-muted">Estado</span>
                            <span class="badge gc-late" id="statusBadge">Pendiente</span>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>