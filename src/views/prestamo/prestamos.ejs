<!--begin::Toolbar-->
<div class="toolbar py-3 py-lg-6" id="kt_toolbar">
    <div class="container-xxl d-flex flex-stack flex-wrap gap-2">
        <div class="page-title d-flex flex-column justify-content-center me-3">
            <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">
                Préstamos
            </h1>
            <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                <li class="breadcrumb-item text-muted">
                    <a href="/" class="text-muted text-hover-primary">Inicio</a>
                </li>
                <li class="breadcrumb-item"><span class="bullet bg-gray-400 w-5px h-2px"></span></li>
                <li class="breadcrumb-item text-dark">Préstamos</li>
            </ul>
        </div>

        <div class="d-flex align-items-center gap-2 gap-lg-3">
            <a href="/prestamos/nuevo" class="btn btn-primary">
                <i class="ki-duotone ki-plus fs-2"></i>
                Nuevo préstamo
            </a>
        </div>
    </div>
</div>
<!--end::Toolbar-->

<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="container-xxl" id="kt_content_container">

        <div class="card gc-elevated">
            <div class="card-header border-0 pt-6">
                <div class="card-title">
                    <!--begin::Search-->
                    <div class="d-flex align-items-center position-relative my-1">
                        <i class="ki-duotone ki-magnifier fs-3 position-absolute ms-5">
                            <span class="path1"></span><span class="path2"></span>
                        </i>
                        <input
                                type="text"
                                id="dtSearch"
                                class="form-control form-control-solid w-250px ps-13"
                                placeholder="Buscar préstamo..."
                                autocomplete="off"
                        />
                    </div>
                    <!--end::Search-->
                </div>

                <div class="card-toolbar">
                    <div class="d-flex justify-content-end gap-2">
                        <button type="button" class="btn btn-light" id="btnReload">
                            <i class="ki-duotone ki-arrows-circle fs-2">
                                <span class="path1"></span><span class="path2"></span>
                            </i>
                            Refrescar
                        </button>

                        <div class="d-flex align-items-center">
                            <span class="text-muted fs-7 me-2">Estado</span>
                            <select class="form-select form-select-solid form-select-sm w-160px" id="fltEstado">
                                <option value="">Todos</option>
                                <option value="ACTIVO">ACTIVO</option>
                                <option value="PAGADO">PAGADO</option>
                                <option value="ANULADO">ANULADO</option>
                            </select>
                        </div>

                        <div class="d-flex align-items-center">
                            <span class="text-muted fs-7 me-2">Atrasos</span>
                            <select class="form-select form-select-solid form-select-sm w-160px" id="fltAtrasos">
                                <option value="">Todos</option>
                                <option value="1">Con atrasos</option>
                                <option value="0">Sin atrasos</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-body pt-0">
                <div class="table-responsive">
                    <table id="dtPrestamos" class="table align-middle table-row-dashed fs-6 gy-3">
                        <thead>
                        <tr class="text-start text-muted fw-bold fs-7 text-uppercase gs-0">
                            <th class="min-w-90px">ID</th>
                            <th class="min-w-160px">Cliente</th>
                            <th class="min-w-140px">CUI9</th>
                            <th class="min-w-140px">Agente</th>
                            <th class="min-w-140px">Inicio</th>
                            <th class="min-w-140px text-end">Principal</th>
                            <th class="min-w-120px text-end">Saldo</th>
                            <th class="min-w-140px">Estado</th>
                            <th class="min-w-140px text-end">Atrasos</th>
                            <th class="text-end min-w-120px">Acciones</th>
                        </tr>
                        </thead>
                        <tbody class="text-gray-600 fw-semibold">
                        <!-- DataTables server-side -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>